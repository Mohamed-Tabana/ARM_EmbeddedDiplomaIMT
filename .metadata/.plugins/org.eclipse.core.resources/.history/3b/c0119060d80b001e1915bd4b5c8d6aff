#ifndef MCAL_SPI_SPI_PRV_H_
#define MCAL_SPI_SPI_PRV_H_

 enum {
    CPHA = 0x00,
    CPOL = 0x01,
    MSTR = 0x02,
    BR0 = 0x03,
    SPE = 0x06,
    LSBFIRST,
    SSI,
    SSM,
    RXONLY,
    DFF,
    CRCNEXT,
    CRCEN,
    BIDIOE ,
    BIDIMODE
} ;

 enum {

    SPI_CR2_RXDMAEN = 0x01,
	SPI_CR2_TXDMAEN = 0x02,
	SPI_CR2_SSOE = 0x04,
	SPI_CR2_FRF = 0x10,
	SPI_CR2_ERRIE = 0x20,
	SPI_CR2_RXNEIE = 0x40,
	SPI_CR2_TXEIE = 0x80,
} ;

#endif /* MCAL_SPI_SPI_PRV_H_ */

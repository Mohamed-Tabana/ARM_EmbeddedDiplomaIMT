}
int main(void)
{

	 MGPIO_Init( &pin_arr[0]);
	 MGPIO_Init( &pin_arr[1]);
	 MGPIO_Init( &pin_arr[2]);
	 MGPIO_vSetOutputPinValue(pin_arr[0].PIN_Port,pin_arr[0].PIN_Number,OUTPUT_HIGH);

//	 xTaskCreate(Task_LED0,NULL,50,NULL,1,NULL);
